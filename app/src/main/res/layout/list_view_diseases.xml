<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_v2"
    android:layout_marginBottom="@dimen/margin_v2"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/margin_v1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_01">

        <ImageView
            android:id="@+id/d_picture"
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@color/teal_200" />

        <TextView
            android:id="@+id/d_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_v1"
            android:layout_marginTop="@dimen/margin_v6"
            android:layout_marginEnd="@dimen/margin_v1"
            android:gravity="start"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/d_picture"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Selvia Indriani" />

        <TextView
            android:id="@+id/d_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_v1"
            android:layout_marginEnd="2dp"
            android:gravity="start"
            android:maxLines="3"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/d_picture"
            app:layout_constraintTop_toBottomOf="@id/d_title"
            tools:text="ini tentang selvia" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>